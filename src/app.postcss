/*place global styles here */
html,
body {
	@apply h-full;
}

html,
body {
	@apply h-full;
}
body {
	background-image: radial-gradient(
			at 100% 100%,
			rgba(var(--color-primary-500) / 0.8) 0px,
			transparent 50%
		),
		radial-gradient(at 0% 0%, rgba(var(--color-secondary-100) / 0.3) 0px, transparent 50%);
	background-attachment: fixed;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}
